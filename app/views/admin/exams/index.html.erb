<% content_for :title, "Exams" %>

<h1>Exams</h1>

<div id="exams">
  <% @exams.each do |exam| %>
    <%= render "exam", exam: exam %>
    <p>
      <%= link_to "Show this exam", admin_exam_path(exam) %>
    </p>
  <% end %>
</div>

<%= link_to "New exam", new_admin_exam_path %>
