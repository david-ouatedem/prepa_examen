<!-- Hero Section -->
<section class="hero text-center py-5 bg-light">
  <h1 class="display-5 fw-bold mb-3">Prépa Examens</h1>
  <p class="lead text-muted mb-4">
    Trouvez et téléchargez facilement vos sujets d'examen par spécialité et année.
  </p>
</section>

<section data-controller="subjects">
  <div class="container my-4">
    <div class="row g-3 align-items-end">
      <div class="col-md-3">
        <label for="examSelect" class="form-label">Examen</label>
        <select
          id="examSelect"
          class="form-select"
          data-subjects-target="exam"
          data-action="change->subjects#loadSpecialities">
          <option value="">-- Sélectionnez un examen --</option>
          <% @exams.each do |exam| %>
            <option value="<%= exam.id %>"><%= exam.label %></option>
          <% end %>
        </select>
      </div>

      <div class="col-md-3">
        <label for="specialitySelect" class="form-label">Spécialité</label>
        <select id="specialitySelect" class="form-select" data-subjects-target="speciality">
          <option value="">-- Sélectionnez une spécialité --</option>
        </select>
      </div>

      <div class="col-md-3">
        <label for="year" class="form-label">Année</label>
        <input
          type="number"
          id="year"
          class="form-control"
          placeholder="ex: 2023"
          min="2000"
          max="2100"
          data-subjects-target="year">
      </div>

      <div class="col-md-2">
        <button data-action="click->subjects#fetchSubjects" class="btn btn-primary w-100">
          Rechercher
        </button>
      </div>
    </div>
  </div>

  <section class="subjects container my-4" data-subjects-target="list">
    <p class="text-center text-muted mt-5">Veuillez sélectionner un examen et une spécialité pour voir les sujets.</p>
  </section>
</section>
